<Window x:Class="CSET_TA_Assistant.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSET_TA_Assistant"
        mc:Ignorable="d"
        Title="InputDialog" Height="80.577" Width="344.863" Initialized="Window_Initialized" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Name="lblText" MaxWidth="120" VerticalAlignment="Center">Input:</Label>
        <TextBox Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Name="txtAnswer"/>
        <Button Grid.Column="3" Name="btnOK" Click="btnOK_Click" IsDefault="True">OK</Button>
    </Grid>
</Window>
